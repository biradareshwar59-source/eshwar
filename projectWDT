<body>

<div class="card">
    <h1>Internet Speed Test</h1>
    <div id="speedValue">-- Mbps</div>
    <button id="startBtn" onclick="startTest()">Start Test</button>
</div>

<script>
function startTest() {
    const testImage =
        "https://upload.wikimedia.org/wikipedia/commons/3/3f/Fronalpstock_big.jpg";
    const fileSizeInBytes = 5450000; // 5.45 MB

    const speedDisplay = document.getElementById("speedValue");
    const button = document.getElementById("startBtn");

    speedDisplay.innerText = "Testing...";
    button.disabled = true;

    const startTime = new Date().getTime();

    fetch(testImage, { cache: "no-store" })
        .then(response => response.blob())
        .then(() => {
            const endTime = new Date().getTime();
            const duration = (endTime - startTime) / 1000;

            const bitsLoaded = fileSizeInBytes * 8;
            const speedMbps = (bitsLoaded / duration / (1024 * 1024)).toFixed(2);

            speedDisplay.innerText = speedMbps + " Mbps";
            button.disabled = false;
        })
        .catch(error => {
            speedDisplay.innerText = "Error!";
            console.error(error);
            button.disabled = false;
        });
}
</script>

</body>
